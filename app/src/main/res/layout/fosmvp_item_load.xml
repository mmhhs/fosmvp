<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/background_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_empty">

    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/fosmvp_shape_loading"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/txt_loading_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="loading..."
            android:textColor="@color/text_black2"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_error">
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fosmvp_ic_error"
            />

        <TextView
            android:id="@+id/txt_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="@string/fm_mysj"
            android:textColor="@color/text_black3"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/fm_djcs"
            android:textColor="@color/text_grey_light"
            android:textSize="10sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_opt"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/fosmvp_shape_corner_blue"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:minWidth="80dp"
            android:text="@string/fm_cxjz"
            android:textColor="@color/bg_white"
            android:textSize="12sp"
            android:visibility="visible"/>
    </LinearLayout>


</LinearLayout>